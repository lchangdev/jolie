/* ---------- layout ---------- */

html,
body {
  font-family: 'Poiret One';
  font-weight: 400;
  height: 100%;
}

table td {
  text-align: center;
  font-weight: 500;
  letter-spacing: 2px;
}

/* ---------- sidebar ---------- */

#sidebar-wrapper {
  opacity: 0.90;
}

.sidebar-brand {
  padding-top: 5px;
}

/* ---------- homepage ---------- */

#wrapper,
#page-content-wrapper,
.container-fluid,
#homepage-container {
  height: 100%;
}

#homepage-container {
  margin-left: 0px;
  margin-right: 0px;
}

.container-fluid {
  padding: 0px;
}

#menu-toggle {
  position: fixed;
  background-color: transparent;
  border-radius: 0px;
  margin-top: 30px;
  margin-left: 30px;
  z-index: 1;
  border: 1px solid tomato;
  padding: 5px 5px 5px 5px;
}

#menu-toggle:focus, #menu-toggle:active:focus, #menu-toggle.active:focus {
  outline: none;
}

#menu-toggle span:nth-child(n+3) {
  margin-top: 5px;
}

.icon-bar {
  display: block;
  width: 25px;
  height: 3px;
  background-color: tomato;
}

/* ---------- home ---------- */

#home-container {
  height: 100%;
  padding-left: 0px;
  padding-right: 0px;
}

.jumbotron {
  background: transparent;
  text-align: center;
  width: 100%;
  padding-top: 300px;
}

.jumbotron .container {
  width: 100%;
}

#homepage-header {
  font-size: 10em;
  color: #5C97BF;
  font-weight: 800;
  letter-spacing: 50px;
}

#city {
  color: tomato;
  letter-spacing: 20px;
  font-weight: bold;
}

/* ---------- wholesale ---------- */

#wholesale-container,
#wholesale-header-container,
#wholesale-company1-container,
#wholesale-company2-container {
  height: 100%;
}

#wholesale-container,
#wholesale-summary-container,
#wholesale-header-container {
  padding-left: 0px;
  padding-right: 0px;
}

#wholesale-container {
  background: url('<%= asset_path("background.jpg") %>') no-repeat center;
  background-size: cover;
  background-attachment: fixed;
}

#wholesale-summary-container {
  background-color: rgba(0,0,0, 0.95);
  opacity: 0.8;
  height: 50%;
}

#wholesale-header-container {
  padding-top: 140px;
  text-align: center;
}

#wholesale-header-container h1 {
  color: #5C97BF;
  letter-spacing: 20px;
}

#wholesale-header-container h4 {
  color: #5C97BF;
}

#wholesale-company1-container,
#wholesale-company2-container {
  text-align: center;
  padding-top: 160px;
}

.wholesale-btn {
  border-radius: 0px;
  width: 50%;
  border: 1px solid tomato;
  background-color: transparent;
  opacity: 0.5;
  font-size: 20px;
  letter-spacing: 2px;
}

.wholesale-btn,
.wholesale-btn:hover {
  color: tomato;
}

/* ---------- about ---------- */

#about-container,
#about-header-container,
#about-content-container {
  padding-left: 0px;
  padding-right: 0px;
}

#about-container {
  background: url('<%= asset_path("background.jpg") %>') no-repeat center;
  background-size: cover;
  height: 100%;
  background-attachment: fixed;
}

#about-summary-container {
  background-color: rgba(0,0,0, 0.95);
  opacity: 0.8;
  overflow: auto;
}

#about-summary-container,
#about-header-container,
#about-content-container {
  height: 50%;
}

#about-header-container {
  text-align: center;
  padding-top: 140px;
}

#about-header-container h1 {
  color: #5C97BF;
  letter-spacing: 20px;
}

#about-content-container h3 {
  color: #5C97BF;
  line-height: 40px;
  padding-top: 85px;
}

/* ---------- contact ---------- */

#contact-container,
#contact-info-container {
  height: 100%;
  padding-left: 0px;
  padding-right: 0px;
}

#contact-info-container {
  overflow: auto;
}

.contact-row {
  height: 225px;
}

.contact-info-summary {
  height: 100px;
  padding-top: 30px;
  text-align: center;
}

.contact-info-summary h1 {
  letter-spacing: 15px;
}

#email-container {
  padding-bottom: 20px;
}

.email-submit-btn {
  width: 100%;
}

.form-horizontal {
  padding-top: 30px;
}

.form-control {
  border-color: black;
}

#map {
  height: 100%;
}

/* ----------- media queries ----------- */

/* ----- mobile ----- */
@media (max-width: 768px) {
  .form-group {
    padding-left: 50px;
    padding-right: 50px;
  }

  #map {
    height: 50%;
  }
}

/* ----- tablet ----- */
@media (max-width: 992px) {

  #wholesale-container {
    overflow: auto;
  }

  #wholesale-header-container {
    padding-top: 10px;
  }

  #wholesale-header-container,
  #wholesale-company1-container,
  #wholesale-company2-container {
    height: 33.333%;
  }

  #wholesale-company1-container,
  #wholesale-company2-container {
    padding-top: 30px;
  }

  #about-header-container {
    height: 25%;
    padding-top: 10px;
  }

  #about-content-container {
    height: 75%;
  }

  #about-content-container h3 {
    padding-top: 5px;
    line-height: 40px;
  }
}

