/* ---------- layout ---------- */

html,
body {
  font-family: 'Poiret One';
  font-weight: 400;
  height: 100%;
}

/* ---------- sidebar ---------- */

#sidebar-wrapper {
  opacity: 0.90;
}

.sidebar-brand {
  padding-top: 5px;
}

/* ---------- homepage ---------- */

.player {

}

#wrapper,
#page-content-wrapper,
.container-fluid {
  height: 100%;
}

.homepage-container {
  margin-left: 0px;
  margin-right: 0px;
  height: 100%;
}

.container-fluid {
  padding: 0px;
}

#menu-toggle {
  position: fixed;
  background-color: transparent;
  border-radius: 0px;
  margin-top: 30px;
  margin-left: 30px;
  z-index: 1;
  border: 1px solid tomato;
  padding: 5px 5px 5px 5px;
}

#menu-toggle:focus, #menu-toggle:active:focus, #menu-toggle.active:focus {
  outline: none;
}

#menu-toggle span:nth-child(n+3) {
  margin-top: 5px;
}

.icon-bar {
  display: block;
  width: 25px;
  height: 3px;
  background-color: tomato;
}

#down-text {
  -ms-transform: rotate(90deg); /* IE 9 */
  -webkit-transform: rotate(90deg); /* Chrome, Safari, Opera */
  transform: rotate(90deg);
  color: #5C97BF;
}

#down-link {
  font-size: 3em;
  padding: 0px;
  font-weight: 100;
  font-family: 'Advent Pro';
  border-radius: 100%;
  height: 100px;
  width: 100px;
  border: 2px solid #5C97BF;
}

#down-link:hover {
  text-decoration: none;
}

/* ---------- home ---------- */

.home-container {
/*  background: url('<%= asset_path("test8.jpg") %>') no-repeat center;
  background-size: cover;*/
  height: 100%;
  padding-left: 0px;
  padding-right: 0px;
}

.jumbotron {
  background: transparent;
  text-align: center;
  width: 100%;
  padding-top: 300px;
}

.jumbotron .container {
  width: 100%;
}

#homepage-header {
  font-size: 10em;
  color: #5C97BF;
  font-weight: 800;
  letter-spacing: 50px;
}

#city {
  color: tomato;
  letter-spacing: 20px;
  font-weight: bold;
}

/* ---------- wholesale ---------- */

.wholesale-container {
  background: url('<%= asset_path("test11.jpg") %>') no-repeat center;
  background-size: cover;
  height: 100%;
  background-attachment: fixed;
  padding-left: 0px;
  padding-right: 0px;
}

.wholesale-summary-container {
  background-color: rgba(0,0,0, 0.7);
  opacity: 0.8;
  height: 350px;
  margin-top: 200px;
  padding-left: 0px;
  padding-right: 0px;
}

.wholesale-header-container {
  height: 350px;
  padding-left: 0px;
  padding-right: 0px;
  padding-top: 140px;
  text-align: center;
}

.wholesale-header-container h1 {
  color: #5C97BF;
  letter-spacing: 20px;
}

.wholesale-company1-container,
.wholesale-company2-container {
  height: 100%;
}

/* ---------- about ---------- */

.about-container {
  background: url('<%= asset_path("test11.jpg") %>') no-repeat center;
  background-size: cover;
  height: 100%;
  background-attachment: fixed;
  padding-left: 0px;
  padding-right: 0px;
}

.about-summary-container {
  background-color: rgba(0,0,0, 0.7);
  opacity: 0.8;
  margin-top: 200px;
}

.about-summary-container
.about-header-container,
.about-content-container {
  height: 350px;
  padding-left: 0px;
  padding-right: 0px;
}

.about-header-container {
  text-align: center;
  padding-top: 140px;
}

.about-header-container h1 {
  color: #5C97BF;
  letter-spacing: 20px;
}

.about-content-container h2 {
  color: tomato;
}
/* ---------- contact ---------- */

.contact-container {
  height: 100%;
  padding-left: 0px;
  padding-right: 0px;
}

.contact-info-container {
  height: 100%;
  padding-left: 0px;
  padding-right: 0px;
}

.contact-row {
  height: 225px;
}

.contact-info-summary {
  height: 100px;
  padding-top: 30px;
  text-align: center;
}

.contact-info-summary h1 {
  letter-spacing: 15px;
}

#email-container {
  padding-bottom: 20px;
}

.email-submit-btn {
  width: 100%;
}

.form-horizontal {
  padding-top: 30px;
}

.form-control {
  border-color: black;
}

table td {
  text-align: center;
  font-weight: 500;
  letter-spacing: 2px;
}

.map-container {
  height: 100%;
  background-color: tomato;
}
