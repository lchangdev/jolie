/* ---------- layout ---------- */

html,
body {
  font-family: 'Roboto';
  height: 100%;
}

#wrapper,
#page-content-wrapper,
.container-fluid {
  height: 100%;
}

.container-fluid {
  padding: 0px;
}

.toggle-container {
  padding-left: 20px;
  padding-top: 20px;
}

#menu-toggle {
  position: fixed;
}

.icon-bar {
  display: block;
  width: 22px;
  height: 2px;
  background-color: #cccccc;
  border-radius: 1px;
}

/* ---------- sidebar ---------- */

#sidebar-wrapper {
  opacity: 0.90;
}

.sidebar-brand {
  padding-top: 5px;
}

/* ---------- homepage ---------- */

.homepage-container {
  background: url('<%= asset_path("test.jpg") %>') no-repeat center;
  background-size: cover;
  height: 100%;
}

/* ---------- wholesale ---------- */

.wholesale-container {
  background: url('<%= asset_path("test2.jpg") %>') no-repeat center;
  background-size: cover;
  height: 100%;
}

/* ---------- about ---------- */

.about-container {
  background: url('<%= asset_path("test3.jpg") %>') no-repeat center;
  background-size: cover;
  height: 100%;
  background-attachment: fixed;
}

/* ---------- contact ---------- */

.contact-container {
  background: url('<%= asset_path("test4.jpg") %>') no-repeat center;
  background-size: cover;
  height: 100%;
}


